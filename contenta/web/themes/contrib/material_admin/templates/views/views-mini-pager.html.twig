{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
  <nav class="pager" role="navigation" aria-labelledby="pagination-heading">
    <h4 class="pager__heading visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="pagination">
      {% if items.previous %}
        <li><a href="{{ items.previous.href }}" class="waves-effect" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}><i class="material-icons">keyboard_arrow_left</i>
         <span class="visually-hidden">{{ 'Previous page'|t }}</span>
          </a>
        </li>
      {% endif %}
      {% if items.current %}
        <li class="pager__item is-active">
          {% trans %}
            Page {{ items.current }}
          {% endtrans %}
        </li>
      {% endif %}
      {% if items.next %}
        <li>
          <a href="{{ items.next.href }}" class="waves-effect" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <i class="material-icons">keyboard_arrow_right</i>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
